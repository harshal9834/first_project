<style>
    /* ---------- NAVBAR ---------- */
    .navbar {
        height: 5rem !important;
        background: #fff !important;
        border-bottom: 1px solid #ddd;
    }

    .navbar .container-fluid {
        display: flex !important;
        align-items: center !important;
        position: relative !important;
    }

    /* Logo */
    .fa-compass {
        color: #fe424d !important;
        font-size: 2rem !important;
    }

    /* ---------- CENTER SEARCH ---------- */
    .search-nav {
        position: absolute !important;
        left: 50% !important;
        transform: translateX(-50%) !important;
        width: 100%;
        max-width: 500px;
    }

    .search-nav form {
        display: flex !important;
        align-items: center !important;
        width: 100%;
        height: 42px !important;
        border-radius: 999px !important;
        border: 1px solid #ddd !important;
        background: #fff !important;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08) !important;
        overflow: hidden;
    }

    /* Input */
    .search-inp {
        flex: 1;
        height: 100% !important;
        padding: 0 1rem !important;
        border: none !important;
        outline: none !important;
        border-radius: 999px !important;
        font-size: 1rem;
    }

    /* Button */
    .search-btn {
        height: 100% !important;
        padding: 0 1.2rem !important;
        border-radius: 999px !important;
        border: none !important;
        background: #fe424d !important;
        color: #fff !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .search-btn:hover {
        background: #e63946 !important;
    }

    .search-btn i {
        margin-right: 6px;
    }

    /* ---------- RIGHT LINKS ---------- */
    .navbar-nav.ms-autof {
        margin-left: auto !important;
        display: flex !important;
        align-items: center !important;
        gap: 1rem !important;
    }

    .navbar-nav.ms-autof .nav-link {
        font-weight: 500 !important;
        color: #222 !important;
    }

    /* ---------- MOBILE ---------- */
    @media (max-width: 768px) {
        .search-nav {
            position: static !important;
            transform: none !important;
            margin: 0.5rem auto !important;
        }

        .search-inp {
            width: 200px !important;
        }
    }

    @media (max-width: 576px) {
        .search-inp {
            width: 140px !important;
        }

        .search-btn {
            padding: 0 0.8rem !important;
        }
    }
</style>


<nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">

            <div class="navbar-nav">
                <a class="nav-link" href="/listings">Explore</a>
            </div>
            <div class="navbar-nav search-nav">
                <form class="d-flex" role="search">
                    <input class="form-control me-2 search-inp" type="search" placeholder="Search"
                        aria-label="Search" />
                    <button class="btn search-btn" type="submit"><i
                            class="fa-solid fa-magnifying-glass"></i>Search</button>
                </form>
            </div>
            <div class="navbar-nav ms-autof">
                <li class="nav-item">
                    <a class="nav-link" href="/listings/new">Airbnb your home</a>
                </li>
                <%if(!currUser){%>
                    <a class="nav-link" href="/signup"><b>Sign Up</b></a>
                    <a class="nav-link" href="/login"><b>Log in</b></a>
                    <%}%>
                        <%if(currUser){%>
                            <a class="nav-link" href="/logout"><b>Log Out</b></a>
                            <%}%>
            </div>
        </div>
    </div>
</nav>